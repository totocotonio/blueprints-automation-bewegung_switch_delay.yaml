alias: Flur Bewegung schaltet Switch (30s)
description: Schaltet switch.flur_bewegung bei Bewegung ein und nach 30s ohne Bewegung aus
mode: restart

trigger:
  - platform: state
    entity_id: binary_sensor.bewegungs_sensor_flur_emma_belegung
    to: "on"

  - platform: state
    entity_id: binary_sensor.bewegungs_sensor_flur_emma_belegung
    to: "off"
    for:
      seconds: 30

action:
  - choose:
      - conditions:
          - condition: state
            entity_id: binary_sensor.bewegungs_sensor_flur_emma_belegung
            state: "on"
        sequence:
          - service: switch.turn_on
            target:
              entity_id: switch.flur_bewegung

      - conditions:
          - condition: state
            entity_id: binary_sensor.bewegungs_sensor_flur_emma_belegung
            state: "off"
        sequence:
          - service: switch.turn_off
            target:
              entity_id: switch.flur_bewegung
